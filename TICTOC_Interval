<div id="heart-div" style="position: absolute; width: 90px; height: 90px; margin: 70 auto; margin-top: 50px;">
  <div id="heart" style="position: relative; width: 100px; height: 90px; margin-top: 10px;">
    <div id="heart-before" style="position: absolute; top: 0; width: 52px; height: 80px; border-radius: 50px 50px 0 0; background: #F44336; left: 50px; transform: rotate(-45deg); transform-origin: 0 100%;"></div>
    <div id="heart-after" style="position: absolute; top: 0; width: 52px; height: 80px; border-radius: 50px 50px 0 0; background: #F44336; left: 0; transform: rotate(45deg); transform-origin: 100% 100%;"></div>
  </div>
</div>

<button id="slower-button">Slower</button>
<button id="faster-button">Faster</button>
<div id="beat-rate-text" style="margin-top: 150px;"></div>

<script>
  const slowerButton = document.getElementById("slower-button");
  const fasterButton = document.getElementById("faster-button");
  const heartDiv = document.getElementById("heart-div");
  const beatRateText = document.getElementById("beat-rate-text");

  let beatRate = 40;
  heartDiv.style.animationDuration = (60 / beatRate) + "s";
  beatRateText.innerHTML = `Beats Per Minute: ${beatRate}`;

  slowerButton.addEventListener("click", () => {
    beatRate = Math.max(beatRate - 5, 0);
    heartDiv.style.animationDuration = (60 / beatRate) + "s";
    beatRateText.innerHTML = `Beats Per Minute: ${beatRate}`;
  });

  fasterButton.addEventListener("click", () => {
    beatRate = Math.min(beatRate + 5, 150);
    heartDiv.style.animationDuration = (60 / beatRate) + "s";
    beatRateText.innerHTML = `Beats Per Minute: ${beatRate}`;
  });
</script>

<style>
  #heart-div {
    position: absolute;
    animation-name: beat;
    animation-duration: 1s;
    animation-iteration-count: infinite;
  }

  #beat-rate-text {
    margin-top: 100px;
  }

  @keyframes beat {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.25);
    }
    100% {
      transform: scale(1);
    }
  }
</
